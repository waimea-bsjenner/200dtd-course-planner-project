{#=====================================================
  New Step Form
  -Lets user add a new step to the planner
=====================================================#}

{% extends 'pages/base.jinja' %}


{% block title %}

    Course Planner

{% endblock %}


{% block content %}

    <h1>New Step</h1>

    <form action = "/addStep" method="POST">
      <input
        type="text"
        name="name"
        placeholder="Name of new step"
        required
      >

      <select name=topic_id type="number" required placeholder="Topic of new Step">
        {% for topic in topics %}
          <option value="{{ topic.id }}">{{ topic.name }}</option>
        {% endfor %}
      </select>

      <input
        type="text"
        name="notes"
        placeholder="notes of new step"
      >

      <input
        type="text"
        name="url1"
        placeholder="resource link 1"
      >

      <input
        type="text"
        name="url2"
        placeholder="resource link 2"
      >

      <input
        type="text"
        name="url3"
        placeholder="resource link 3"
      >

      <div>
        <a role="button" href="/">Cancel</a>

        <button>Add step</button>
      </div>

    </form>
    
{% endblock %}

